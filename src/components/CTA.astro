---
interface Props {
  href: string;
  text: string;
  variant?: 'primary' | 'secondary';
  className?: string;
}

const { href, text, variant = 'primary', className = '' } = Astro.props;
const baseClasses = 'inline-block px-6 py-3 rounded-lg font-semibold text-center transition-all focus:outline-none focus:ring-2 focus:ring-offset-2';
const variantClasses = variant === 'primary'
  ? 'bg-terracotta-600 dark:bg-terracotta-500 text-white hover:bg-terracotta-700 dark:hover:bg-terracotta-600 focus:ring-terracotta-500'
  : 'bg-warm-200 dark:bg-warm-700 text-warm-800 dark:text-warm-100 hover:bg-warm-300 dark:hover:bg-warm-600 focus:ring-warm-500';
---

<a
  href={href}
  class={`${baseClasses} ${variantClasses} ${className}`}
>
  {text}
</a>

