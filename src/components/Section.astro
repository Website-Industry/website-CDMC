---
interface Props {
  id?: string;
  title?: string;
  className?: string;
}

const { id, title, className = '' } = Astro.props;
---

<section
  id={id}
  class={`py-12 md:py-16 ${className}`}
  {...(id ? { 'aria-labelledby': `${id}-title` } : {})}
>
  <div class="container mx-auto px-4">
    {title && (
      <h2
        id={`${id}-title`}
        class="text-3xl md:text-4xl font-bold text-warm-800 mb-8"
      >
        {title}
      </h2>
    )}
    <slot />
  </div>
</section>

